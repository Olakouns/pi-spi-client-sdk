{
  "request": {
    "method": "POST",
    "urlPath": "/oauth/token",
    "headers": {
      "Content-Type": {
        "contains": "application/x-www-form-urlencoded"
      }
    },
    "bodyPatterns": [
      { "contains": "grant_type=client_credentials" },
      { "matches": ".*client_id=[a-zA-Z0-9_-]+.*" }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "bodyFileName": "auth-response.json"
  }
}